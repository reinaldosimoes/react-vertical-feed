{
  "name": "react-vertical-feed",
  "version": "0.1.0",
  "description": "A React component for creating vertical media feeds (videos and images) similar to TikTok or Instagram",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "vite",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "react",
    "media",
    "feed",
    "vertical",
    "tiktok",
    "instagram",
    "reels",
    "scroll",
    "component",
    "video",
    "image"
  ],
  "author": "reinaldosimoes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reinaldosimoes/react-vertical-feed.git"
  },
  "bugs": {
    "url": "https://github.com/reinaldosimoes/react-vertical-feed/issues"
  },
  "homepage": "https://github.com/reinaldosimoes/react-vertical-feed#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "prettier": "^3.0.0",
    "rollup": "^3.21.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
