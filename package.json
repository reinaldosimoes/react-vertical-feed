{
  "name": "react-vertical-feed",
  "version": "0.1.11",
  "description": "A React component for creating vertical media feeds (videos) similar to TikTok or Instagram",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "vite",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "version": "npm run format && git add -A src",
    "postversion": "git push --follow-tags",
    "size": "size-limit",
    "analyze": "rollup -c --config-option analyze=true"
  },
  "keywords": [
    "react",
    "media",
    "feed",
    "vertical",
    "tiktok",
    "instagram",
    "reels",
    "youtube",
    "shorts",
    "scroll",
    "component",
    "video"
  ],
  "author": "reinaldosimoes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reinaldosimoes/react-vertical-feed.git"
  },
  "bugs": {
    "url": "https://github.com/reinaldosimoes/react-vertical-feed/issues"
  },
  "homepage": "https://github.com/reinaldosimoes/react-vertical-feed#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.1",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@size-limit/file": "^11.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "rollup": "^3.21.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.3.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^6.2.6"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    }
  ]
}
